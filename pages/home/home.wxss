/* pages/home/home.wxss */
.banner {
  height: 300rpx;
}

.item {
  border-radius: 20rpx;
}

image {
  width: 100vw;
}

.tool {
  display: flex;
  flex-wrap: wrap;
}

.cont {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 200rpx;
}

.video_bottom input {
  width: 80%;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.video {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 400rpx;
  margin-top: 10rpx;
}

.video_bottom {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.video_bottom_b {
  display: flex;
  flex-wrap: wrap;
  width: 70%;
}

.cont>.top {
  flex-wrap: wrap;
  height: 90%;
  width: 90%;
  border-radius: 10rpx;
  border: 3rpx solid #7b7c7c;
  display: flex;
  justify-content: left;
  flex-direction: column;
}

.video_top {
  height: 90%;
  width: 90%;
  border-radius: 10rpx;
  border: 3rpx solid #7b7c7c;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.video_top video {
  width: 100%;
  height: 100%;
}

.footer {
  /* background-color: rebeccapurple; */
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-around;
}

.copy {
  color: #7b7c7c;
  text-align: center;
  font-size: 24rpx;
}

.announcement {
  width: 100vw;
  height: 50rpx;
  /* background-color: rebeccapurple; */
}

.tool>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 350rpx !important;
  font-size: 25rpx;
  font-weight: 700;
  color: white;
  margin: 10rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.tool>view image {
  position: absolute;
  right: 40rpx;
  width: 70rpx;
  margin-left: 30rpx;
}

.footer button {
  margin-bottom: 10rpx;
  width: 200rpx !important;
  font-size: 25rpx;
  font-weight: 800;
}

.cont input {
  box-sizing: border-box;
  text-indent: 20rpx;
  width: 99%;
  height: 80rpx;
  border-radius: 10rpx;
  border: 3rpx solid #f3f4f5;
}

.tool view {
  width: 50%;
  height: 150rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border: 3rpx solid #f3f4f5;
}