/* pages/mine/mine.wxss */
.top {
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.name {
  font-weight: 800;
  color: white;
  margin-top: 30rpx;
}

.warp {
  position: absolute;
  width: 100%;
  height: 430rpx;
  background-color: rgb(76, 116, 236);
  border-bottom-right-radius: 30%;
  border-bottom-left-radius: 30%;
}

.top image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.center {
  padding-top: 10rpx;
  margin-top: 10rpx;
  /* background-color: tomato; */
  width: 100vw;
  height: 150rpx;
  display: flex;
  justify-content: center;
}

.center .center_warp {
  width: 90%;
  height: 100%;
  background-color: #FAFAFA;
  border-radius: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.center .center_warp view {
  color: #5372E7;
}
